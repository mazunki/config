{
	"sway/workspaces": {
		"disable-scroll": false,
		"all-outputs": false,
		"format": "{icon}{name}",
		"format-icons": {
			"main": "¹",
			"chat": "²",
			"melvor": "³",
			"incremental": "⁴",
			"learnist": "⁵",
			"game": "⁶",
			"config": "⁷",
			"discord": "⁸",
			"obs": "⁹",
			"sidegame": "¹⁰",
			"audio": "¹¹",
			"music": "¹²",
			"13": "¹²",
			"14": "¹⁴",
			"15": "¹⁵",
			"16": "¹⁶",
			"17": "¹⁷",
			"18": "¹⁸",
			"19": "¹⁹",
			"20": "²⁰",
			"21": "²¹",
			"22": "²²",
			"23": "²³",
			"24": "²⁴",
			"default": "",
			"persistent": "*"
		},
		"persistent-workspaces": {
			"game": ["DP-1"],
			"config": ["DP-1"],
			"audio": ["HDMI-A-1"],
			"element": ["DP-2"],
			"discord": ["DP-2"],
			"obs": ["DP-2"],
			"incremental": ["DP-2"],
			"ebuilding": ["DP-1"],
			"uio": ["DP-1"],
			"cinema": ["DP-1"],
			"minecraft": ["DP-1"],
			"gimp": ["DP-1"],
			"vidcast": ["HDMI-A-1"],
			"chat": ["HDMI-A-1"],
			"music": ["HDMI-A-1"],
			"socials": ["HDMI-A-1"],
			"slack": ["HDMI-A-1"],
			"tg": ["HDMI-A-1"],
			"learnist": ["DP-1"]
		}
	},
	"sway/window": {
		"all-outputs": true
	},
	"tray": {
		"icon-size": 30,
		"spacing": 10
	},

	"clock": {
		"tooltip-format": "<tt><small>{calendar}</small></tt>",
		"format": "{:%F %T}",
		"format-alt": "{:%F %T}",
		"interval": 1,
		"locale": "en_ISO.UTF-8",
		"calendar": {
			"mode": "year",
			"mode-mon-col": 3,
			"weeks-pos": "left",
			"format": {
                              "months":     "<span color='#ffead3'>{}</span>",
                              "days":       "<span color='#7c7c7c'>{}</span>",
                              "weeks":      "<span color='#99ffdd'>W{}</span>",
                              "weekdays":   "<span color='#ffcc66'>{}</span>",
                              "today":      "<span color='#ff6699'><b><u>{}</u></b></span>"
			}
                    },
		}
	},

	"wireplumber": {
		"format": "{node_name} {volume}%",
		"on-click": "pavucontrol",
		"on-click-right": "qpwgraph"
	},

	"pulseaudio": {
		"format": "{desc} {volume}% {icon}",
		"format-bluetooth": "{volume}% {icon}",
		"format-bluetooth-muted": "{icon} {format_source}",
		"format-muted": "{format_source}",
		"format-source": "",
		"format-source-muted": "",
		"format-icons": {
			"headphone": "",
			"hands-free": "",
			"headset": "",
			"phone": "",
			"portable": "",
			"car": "",
			"default": ["", "", ""]
		},
		"on-click": "pavucontrol",
		"on-click-right": "killall qp; helvum"
	},

	"cpu": {
		"format": "{usage}% ",
		"tooltip": false,
		"interval": 1
	},
	"memory": {
		"format": "\t{used:3.2f} GiB",
		"interval": 5
	},
	"network#eth": {
		"interface": "enp*",
		"format-ethernet": "{ipaddr}  ",
		"tooltip-format": "{ifname} via {gwaddr}",
		"format-linked": "{ifname} (No IP)",
		"format-disconnected": "Disconnected ⚠",
		"format-alt": "{ifname}: {ipaddr}/{cidr}"
	},
	"network#wlp": {
		"interface": "wlp*",
		"format-wifi": "{essid} ({signalStrength}%) ",
		"tooltip-format": "{ifname} via {gwaddr} ",
		"format-linked": "{ifname} (No IP)",
		"format-disconnected": "Disconnected ⚠",
		"format-alt": "{ifname}: {ipaddr}/{cidr}"
	},
	"temperature": {
		"critical-threshold": 80,
		"format": "{temperatureC}°C {icon}",
		"format-icons": [""]
	}
}
