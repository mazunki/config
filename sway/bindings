# generic
bindsym $mod+Return exec $term
bindsym $mod+x kill
bindsym $mod+r exec $menu
bindsym $mod+Shift+r reload
bindsym $mod+Shift+delete exec swaymsg exit

# normal: right=resize, left=drag. or inverse
floating_modifier $mod normal

# moving windows
bindsym $mod+$left focus left
bindsym $mod+$down focus down
bindsym $mod+$up focus up
bindsym $mod+$right focus right

bindsym $mod+Shift+$left move left
bindsym $mod+Shift+$down move down
bindsym $mod+Shift+$up move up
bindsym $mod+Shift+$right move right

# focusing monitors
bindsym $mod+Left focus output left
bindsym $mod+Right focus output right

bindsym $mod+Shift+Left move workspace output left
bindsym $mod+Shift+Right move workspace output right


# Layout stuff:
bindsym $mod+v layout toggle tabbed split
bindsym $mod+b layout toggle splith splitv
bindsym $mod+space floating toggle
bindsym $mod+f fullscreen

bindsym $mod+Shift+minus move scratchpad
bindsym $mod+minus scratchpad show

bindsym $mod+insert exec swaymsg rename workspace to "$(wofi -d)"

# screenshot
bindsym $mod+o exec grim -g "$(slurp)" - | wl-copy
bindsym $mod+p exec grim -g "$(wl-select-active)" - | wl-copy
bindsym $mod+Shift+p exec grim -g "$(wl-select)" - | wl-copy

bindsym $mod+u exec /home/mazunki/.local/gits/wofi.hg/build/wofi --gtk-dark -W 10 -H 1 --pre-display-cmd '/usr/local/bin/uu %%s' -S dmenu | uu
bindsym $mod+Shift+t exec wofi --show dmenu | xargs alacritty -e
bindsym $mod+0 exec footclient -e htop
