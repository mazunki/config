#!/usr/bin/env python

# built-in imports
import atexit
import csv
import functools
import itertools
import json
import os
import pathlib
import platform
import re
import sys
from typing import Iterable, Optional

from mazunki import fs, xdg
from mazunki.pythoning.packaging.loaders import loadmod
from mazunki.rc import cleanup, interactive_hook, ready_startup

__doc__ = "pythonrc loadederino"
__author__ = "mazunki"
__all__ = (
    "sys",
    "os",
    "platform",
    "pathlib",
    "Optional",
    "Iterable",
    "itertools",
    "functools",
    "json",
    "csv",
    "re",
    "xdg",
    "fs",
)

setattr(sys, "__interactivehook__", interactive_hook)
# sys.ps1 = "üêà[90m:[m "
sys.ps1 = "python3.13: "
sys.ps1 = "üêà: "

_interactive_state = ready_startup(xdg.state_path("python"))
atexit.register(lambda: cleanup(_interactive_state))

# funnier imports
pprint = loadmod("mazunki", "pprint")
clear = loadmod("mazunki", "clear")
m = loadmod("mazunki.maths", "binary")
math = loadmod("math")
sqrt = loadmod("math", "sqrt")

random = loadmod("random")
np = loadmod("numpy")
pd = loadmod("pandas")
np = loadmod("matplotlib")


