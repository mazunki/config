#!/bin/sh
alias ls="ls -la --color='auto'"
alias tree="tree -L 3 -C"
alias grep="grep --color=auto"
alias alsaplayer="alsaplayer --config ${XDG_CONFIG_HOME}/alsaplayer/alsaplayer.conf"
alias conf='function _(){ $EDITOR $HOME/.config/$1; }; _'
alias mv='mv --no-clobber'
alias cp='cp --no-clobber'
alias :q="exit"
alias conf='function _(){ $EDITOR ${XDG_CONFIG_HOME}/$1; }; _'
alias sconf='function _(){ doas $EDITOR /etc/$1; }; _'
alias mntdrive='function _(){ devices="$(lsblk -l -o NAME /dev/$1 | grep -E "$1.+")" && echo $devices | sed "s/$1//" | xargs -I{} doas mkdir -p /mnt/$1/{} && echo $devices | sed "s:\($1\)\(.*\):/dev/\1\2 /mnt/\1/\2:" | xargs -n2 doas mount; }; _'
alias reconf="source $XDG_CONFIG_HOME/$(basename $SHELL)/.*rc"
alias uio="cd ${HOME}/.local/gits/uio.git/"
alias br="broot"

